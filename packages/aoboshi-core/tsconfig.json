{
  "compilerOptions": {
    "composite": true,
    "rootDir": "./src",
    "outDir": "./build",
    "target": "es2022",
    "module": "esnext",
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["*.test.ts"]
}
