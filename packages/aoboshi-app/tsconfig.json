{
  "extends": "../../tsconfig.options.json",
  "compilerOptions": {
    "rootDirs": ["./src", ".storybook"],
    "emitDeclarationOnly": false,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "~/*": ["./src/*"],
      "~app/*": ["./src/renderer/app/*"],
      "~books": ["./src/renderer/books"],
      "~books/*": ["./src/renderer/books/*"],
      "~characters": ["./src/renderer/characters"],
      "~characters/*": ["./src/renderer/characters/*"],
      "~common": ["./src/renderer/common"],
      "~common/*": ["./src/renderer/common/*"],
      "~icons": ["./src/renderer/icons"],
      "~recentlyStudied/*": ["./src/renderer/recentlyStudied/*"],
      "~search": ["./src/renderer/search"],
      "~search/*": ["./src/renderer/search/*"],
      "~statistics": ["./src/renderer/statistics"],
      "~statistics/*": ["./src/renderer/statistics/*"],
      "~theme": ["./src/renderer/theme"],
      "~theme/*": ["./src/renderer/theme/*"]
    },
    "types": ["vite/client"]
  },
  "include": [
    "vite.*.config.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.json",
    ".storybook/*.ts"
  ],
  "references": [
    {
      "path": "../aoboshi-core/tsconfig.json"
    },
    {
      "path": "../aoboshi-kanji/tsconfig.json"
    }
  ]
}
