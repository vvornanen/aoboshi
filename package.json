{
  "name": "@vvornanen/aoboshi",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "husky",
    "lint": "eslint --ext .ts,.tsx .",
    "test:rebuild": "yarn rebuild better-sqlite3",
    "test": "yarn test:rebuild && vitest src",
    "test:integration": "vitest integration",
    "build": "tsc --build",
    "schema": "sqlite3 packages/aoboshi-app/dev.db .schema > packages/aoboshi-app/src/migrations/schema.sql",
    "dev": "concurrently 'yarn build --watch' 'yarn storybook'",
    "package": "yarn workspace @vvornanen/aoboshi-app package && open packages/aoboshi-app/out",
    "make": "yarn workspace @vvornanen/aoboshi-app make && open packages/aoboshi-app/out",
    "start": "yarn workspace @vvornanen/aoboshi-app start",
    "storybook": "yarn workspace @vvornanen/aoboshi-app storybook",
    "chromatic": "yarn workspace @vvornanen/aoboshi-app chromatic --exit-zero-on-changes"
  },
  "lint-staged": {
    "*.{html,css,md,mdx,json}": "prettier --write",
    "*.{js,ts,tsx,mjs}": [
      "prettier --write",
      "eslint --cache --fix"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.2",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "concurrently": "^8.2.2",
    "dotenv": "^16.4.4",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.2",
    "prettier": "3.2.5",
    "typescript": "^5.3.3",
    "vitest": "^1.3.0"
  },
  "resolutions": {
    "@vitejs/plugin-react": ">=4.2.1"
  },
  "packageManager": "yarn@4.1.0",
  "engines": {
    "node": ">=20",
    "npm": "Please use yarn instead of npm",
    "yarn": ">=3.6"
  }
}
