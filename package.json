{
  "name": "@vvornanen/aoboshi",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "husky install",
    "lint": "eslint --ext .ts,.tsx .",
    "test": "jest --testPathIgnorePatterns=integration",
    "test:integration": "jest --testPathPattern=integration",
    "build": "tsc --build",
    "dev": "concurrently 'yarn build --watch' 'yarn storybook'",
    "make": "yarn workspace @vvornanen/aoboshi-app make && open packages/aoboshi-app/out",
    "start": "yarn workspace @vvornanen/aoboshi-app start",
    "storybook": "yarn workspace @vvornanen/aoboshi-app storybook"
  },
  "lint-staged": {
    "*.{html,css,md,mdx,json}": "prettier --write",
    "*.{js,ts,tsx,mjs}": [
      "prettier --write",
      "eslint --cache --fix"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@types/jest": "^29.5.1",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "concurrently": "^8.0.1",
    "dotenv": "^16.0.3",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": ">=6",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "lint-staged": ">=10",
    "prettier": "2.8.8",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  },
  "packageManager": "yarn@3.5.1",
  "engines": {
    "node": ">=20",
    "npm": "Please use yarn instead of npm",
    "yarn": ">=3.5"
  }
}
