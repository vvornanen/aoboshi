{
  "name": "@vvornanen/aoboshi",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "husky install",
    "lint": "eslint --ext .ts,.tsx .",
    "make": "yarn workspace aoboshi-app make && open packages/aoboshi-app/out/aoboshi-app-darwin-arm64",
    "start": "yarn workspace aoboshi-app start",
    "storybook": "yarn workspace aoboshi-app storybook"
  },
  "lint-staged": {
    "*.{html,css,md,mdx,json}": "prettier --write",
    "*.{js,ts,tsx,mjs}": [
      "prettier --write",
      "eslint --cache --fix"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": ">=6",
    "lint-staged": ">=10",
    "prettier": "2.8.8",
    "typescript": "^5.0.4"
  },
  "packageManager": "yarn@3.5.1",
  "engines": {
    "node": ">=20",
    "npm": "Please use yarn instead of npm",
    "yarn": ">=3.5"
  }
}
