{
  "name": "@vvornanen/aoboshi",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "husky",
    "lint": "eslint .",
    "test:rebuild": "yarn rebuild better-sqlite3",
    "test": "yarn test:rebuild && vitest src",
    "test:integration": "vitest integration",
    "build": "yarn workspaces foreach -Apt run build",
    "schema": "sqlite3 packages/aoboshi-app/dev.db .schema > packages/aoboshi-app/src/migrations/schema.sql",
    "dev": "concurrently 'yarn build --watch' 'yarn storybook'",
    "package": "yarn workspace @vvornanen/aoboshi-app package && open packages/aoboshi-app/out",
    "package:ci": "yarn workspace @vvornanen/aoboshi-app package",
    "make": "yarn workspace @vvornanen/aoboshi-app make && open packages/aoboshi-app/out",
    "start": "yarn workspace @vvornanen/aoboshi-app start",
    "storybook": "yarn workspace @vvornanen/aoboshi-app storybook",
    "chromatic": "yarn workspace @vvornanen/aoboshi-app chromatic --exit-zero-on-changes"
  },
  "lint-staged": {
    "*.{html,css,md,mdx,json}": "prettier --write",
    "*.{js,ts,tsx,mjs}": [
      "prettier --write",
      "eslint --cache --fix"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@playwright/test": "^1.47.2",
    "@types/node": "^20.16.10",
    "concurrently": "^9.0.1",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-jsx-a11y": "^6.10.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.12",
    "eslint-plugin-storybook": "^0.9.0",
    "husky": "^9.1.6",
    "jsdom": "^25.0.1",
    "lint-staged": "^15.2.10",
    "prettier": "3.3.3",
    "typescript-eslint": "^8.7.0",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^2.1.1",
    "vitest-mock-extended": "^2.0.2"
  },
  "resolutions": {
    "@vitejs/plugin-react": ">=4.2.1"
  },
  "packageManager": "yarn@4.3.1",
  "engines": {
    "node": ">=20",
    "npm": "Please use yarn instead of npm",
    "yarn": ">=3.6"
  }
}
